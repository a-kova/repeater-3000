{
  "compilerOptions": {
    "incremental": false,
    "target": "ES2024",
    "module": "NodeNext",
    "rootDir": "./src",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "**.d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".git",
    "drizzle.config.js"
  ]
}